@model kaufor.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkingHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkingHours)
        </dd>
        <dt class="col-sm-2">
            Total Earnings
        </dt>
        <dd class="col-sm-10">
            @Model.TotalEarnings.ToString("C") <!-- Displays earnings as currency -->
        </dd>
    </dl>
</div>

<h3>Appointments</h3>
@if (Model.Appointments != null && Model.Appointments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Service</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.Appointments)
            {
                <tr>
                    <td>@appointment.DateTime.ToShortDateString()</td>
                    <td>@appointment.Service.Name</td>
                    <td>@appointment.Service.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found for this employee.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
